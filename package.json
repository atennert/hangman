{
  "name": "hangman",
  "version": "0.0.2",
  "description": "A simple JS hangman implementation",
  "main": "./src/index.html",
  "scripts": {
    "test": "mocha --compilers ts:ts-node/register ./test/*.spec.js",
    "lint": "npm-run-all lint:**",
    "lint:ts": "tslint ./src/**/*.ts",
    "lint:css": "sass-lint -v -q --max-warnings 0",
    "prebuild": "rm -rf ./public/$npm_package_version && mkdir -p ./public/$npm_package_version",
    "postbuild": "rm -rf ./tmp",
    "build": "npm-run-all --parallel build:**",
    "build:ts": "tsc --outDir ./tmp/ && uglifyjs ./tmp/util/*.js ./tmp/index.js > ./public/$npm_package_version/index.js && cp ./tmp/sw/sw.js ./public/$npm_package_version/",
    "build:css": "sassc src/style.scss | postcss -c .postcssrc.json | cssmin > ./public/$npm_package_version/style.css",
    "build:html": "cp ./src/*.html ./public/$npm_package_version/",
    "build:manifest": "cp ./src/manifest.json ./public/$npm_package_version/",
    "build:icon": "convert -resize 144x144 -background none ./src/icon.svg ./public/$npm_package_version/icon.png"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atennert/hangman.git"
  },
  "keywords": [
    "hangman",
    "game"
  ],
  "author": "Andreas Tennert",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atennert/hangman/issues"
  },
  "homepage": "https://github.com/atennert/hangman#readme",
  "devDependencies": {
    "@types/node": "^8.0.53",
    "autoprefixer": "^7.1.6",
    "cssmin": "^0.4.3",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "sass-lint": "^1.12.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "uglify-es": "^3.3.3"
  },
  "dependencies": {}
}
